<p id="notice"><%= notice %></p>

<h1>Distributions</h1>

<p>You are currently viewing all distributions for cities you have joined.</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>City</th>
      <th>Participants</th>
      <th>Quantity</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @distributions.each_with_index do |distribution, index| %>
      <tr>
        <td><%= distribution.date %></td>
        <td><%= Region.find(distribution.region_id).name %></td>
        <td><%= distribution.participants %></td>
        <td><%= distribution.quantity %></td>
        <td><%= distribution.comments %></td>
        <td><%= link_to 'Show', distribution %></td>
        <td><%= link_to 'Edit', edit_distribution_path(distribution) %></td>
        <td><%= link_to 'Delete', distribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New Distribution', new_distribution_path, :class => "btn btn-info" %>
